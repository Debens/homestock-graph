{
    "name": "homestock-graph",
    "version": "0.0.1",
    "scripts": {
        "build": "copyfiles --up 1 **/*.graphql dist && tsc",
        "build:watch": "yarn build -w",
        "test": "jest --config ./jest.config.json",
        "test:coverage": "yarn test --coverage",
        "start": "nodemon dist/index.js",
        "compose": "docker-compose up",
        "precommit": "lint-staged"
    },
    "dependencies": {
        "crypto": "^1.0.1",
        "immutable": "^4.0.0-rc.12",
        "jsonwebtoken": "^8.3.0",
        "mysql": "^2.14.1",
        "reflect-metadata": "^0.1.10",
        "tslib": "^1.9.3",
        "typedi": "^0.8.0",
        "typeorm": "^0.2.8",
        "uuid": "^3.3.2",
        "vesper": "^0.1.9"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "^8.3.0",
        "@types/node": "^8.0.29",
        "@types/uuid": "^3.4.4",
        "copyfiles": "^2.1.0",
        "husky": "^1.1.3",
        "lint-staged": "^8.0.4",
        "nodemon": "^1.18.9",
        "prettier": "^1.15.2",
        "ts-node": "3.3.0",
        "typescript": "^3.1.6"
    },
    "lint-staged": {
        "*.{ts,js,json}": [
            "prettier --write",
            "git add"
        ]
    }
}
